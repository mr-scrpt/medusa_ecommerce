          "name": "POST /admin/attributes (Create)",
          "item": [
            {
              "name": "Success - Create with values",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "pm.test(\"Status code is 201 Created\", () => {",
                      "    pm.response.to.have.status(201);",
                      "});",
                      "",
                      "const res = pm.response.json();",
                      "if (res.attribute && res.attribute.id) {",
                      "    pm.collectionVariables.set(\"attribute_id\", res.attribute.id);",
                      "    console.log(`Saved attribute_id: ${res.attribute.id}`);",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [],
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"name\": \"Fabric\",\n    \"handle\": \"fabric-test\",\n    \"type\": \"multi\",\n    \"filterable\": true,\n    \"values\": [\n        {\n            \"value\": \"Silk\",\n            \"rank\": 1\n        },\n        {\n            \"value\": \"Linen\",\n            \"rank\": 0\n        }\n    ]\n}"
